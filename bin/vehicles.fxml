<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="VehicleController"
      spacing="10" style="-fx-padding: 20;">

    <Label text="Vehicles" style="-fx-font-size: 20px; -fx-font-weight:bold;" />

    <TableView fx:id="vehicleTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="colVehicleNo" text="Vehicle No." prefWidth="150"/>
            <TableColumn fx:id="colOwnerId" text="Owner ID" prefWidth="120"/>
            <TableColumn fx:id="colModel" text="Model" prefWidth="150"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
            <TableColumn fx:id="colInsured" text="Insured" prefWidth="80"/>
            <TableColumn fx:id="colRegDate" text="Reg Date" prefWidth="120"/>
            <TableColumn fx:id="colFuel" text="Fuel" prefWidth="100"/>
            <TableColumn fx:id="colColour" text="Colour" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>
