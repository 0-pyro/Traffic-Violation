<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController"
      style="-fx-padding: 40;">
    
    <Label text="Login" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" promptText="Officer ID" maxWidth="250" />
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>

    <Button text="Login" onAction="#handleLogin" maxWidth="100" />
</VBox>
